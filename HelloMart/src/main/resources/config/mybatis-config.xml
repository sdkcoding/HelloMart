<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration 
    PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    
    <!-- resultType으로 맵으로 받아올 때, null 값을 가지는 컬럼은 맵에 키가 생성되지 않는 현상을 방지 -->
    <settings>
 	   <setting name="callSettersOnNulls" value="true"/>
    </settings>
     		
 	<typeAliases>
		<typeAlias type="com.hellomart.dto.Account" alias="Account"/> 
		<typeAlias type="com.hellomart.dto.QABoard" alias="QABoard"/>
		<typeAlias type="com.hellomart.dto.CmtBoard" alias="CmtBoard"/>
		<typeAlias type="com.hellomart.dto.ProductList" alias="ProductList"/>	
		<typeAlias type="com.hellomart.dto.ReView" alias="Review"/>
		<typeAlias type="com.hellomart.dto.Cart" alias="Cart"/>
		<typeAlias type="com.hellomart.dto.OrderList" alias="OrderList"/>	
		<typeAlias type="com.hellomart.dto.Point" alias="Point"/>		
    </typeAliases>		
</configuration>
